<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="#888888" />
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:hint="restaurant1"
            android:paddingHorizontal="12dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btnFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorites"
            android:drawableLeft="@drawable/ic_favorite_border"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000"/>
        <Button
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:drawableLeft="@drawable/ic_filter"
            android:layout_marginStart="8dp"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000"/>
        <Button
            android:id="@+id/btnAddReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add review"
            android:drawableLeft="@drawable/ic_add"
            android:layout_marginStart="8dp"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000"/>
    </LinearLayout>

    <!-- Restaurant Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_restaurant"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">
            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant1"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/restaurantMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="12sp"
                android:background="#CCCCCC"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="insert\nlogo"
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Results label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"/>

    <!-- RecyclerView for reviews -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allReviewsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="12dp"
        android:nestedScrollingEnabled="true" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"/>

</LinearLayout>
