<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Text box label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write your review"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Text box (larger for multiple lines) -->
        <EditText
            android:id="@+id/editTextReview"
            android:layout_width="365dp"
            android:layout_height="117dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_border"
            android:gravity="top"
            android:hint="Describe your experience..."
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Rating (1 - very bad, 5 - excellent)"
            android:textColor="#000000"
            android:textSize="16sp" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/ratingDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Your rating: 0 ⭐"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnUploadPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="#DDDDDD"
            android:text="Upload Photos"
            android:textColor="#000000" />

        <FrameLayout
            android:id="@+id/photoFrame"
            android:layout_width="335dp"
            android:layout_height="230dp"
            android:layout_marginTop="16dp"
            android:background="#E0E0E0"
            android:padding="8dp">

            <!-- Horizontal scroll for images -->

            <!-- Photo count (top-right corner) -->
            <HorizontalScrollView
                android:layout_width="351dp"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/photoContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/photoCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:background="#CCCCCC"
                android:padding="4dp"
                android:text="0 photos"
                android:textColor="#000000"
                android:textSize="12sp" />

            <!-- Page indicators (dots) -->
            <LinearLayout
                android:id="@+id/pageDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal" />
        </FrameLayout>

        <Button
            android:id="@+id/btnSubmitReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Review"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
